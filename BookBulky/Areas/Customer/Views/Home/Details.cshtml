@model ShoppingCart

<form method="post">
    <div class="card container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Name</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img src="@Model.Product.ImageUrl" class="mt-3 mb-3" style="width:300px; height: 400px" /> 
            </div>
            <div class="col-8 mt-3">
                <h5 class="card-title">@Model.Product.Name</h5>
                <p class="card-text"><b>Author:</b> @Model.Product.Author</p>
                <hr />
                <p class="card-text"><b>Description</b><br /> @Model.Product.Description</p>
                <p class="card-text"><b>Category:</b> @Model.Product.Category.Name</p>
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
            </div>
            </div>
        </div>
    </div>
</form>