@model CoverType

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-bg-primary">Create Cover Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="150px">Back To List</a>
            <a asp-area="customer" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="150px">Home Page</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
     }
}


