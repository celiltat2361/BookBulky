@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>&nbsp;Craete New Cover Type
            </a>

        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
@*                <th>
                    Display Order
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">
                        @item.Name
                    </td>
@*                    <td width="30%">
                        @item.DisplayOrder
                    </td>*@
                    <td width="30%">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="btn btn-outline-primary" 
                                asp-controller="CoverType" 
                                asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square me-2 p-2"></i>
                                Edit
                            </a>
                            <a class="btn btn-outline-danger me-2"
                                asp-controller="CoverType"
                                asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash me-2 p-2"></i>
                                Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

